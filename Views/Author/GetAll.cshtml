@model IEnumerable<BookStore.Models.Domain.Author>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container pt-5">
    <div class="row">
        <div class="col">
            <a class="btn btn-dark" href="/Author/Add"> Add More</a>
        </div>

    </div>
    <div class="row">
        <div class="col-md-6">


            <h2>Authors </h2>
            <table class=" table table-striped table-bordered table-dark">
                <thead>
                <tr>
                    <th>AuthorName</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.AuthorName</td>
                        <td>
                            <a class="btn btn-success" href="/Author/Update?id=@item.Id">Edit</a>
                            <a class="btn btn-danger" onclick="return  window.confirm('Are you sure?')" href="/Author/Delete?id=@item.Id">Delete</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>