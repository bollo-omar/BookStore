@model BookStore.Models.Domain.Author

@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h2>Add Author</h2>
            <form asp-action="Add" method="post">
                <div class="form-group">
                    <label asp-for="AuthorName">AuthorName *</label>
                    <input type="text" asp-for="AuthorName" class="form-control"/>
                    <span asp-validation-for="AuthorName" class="text-danger"></span>
                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }
                <div class="form-group pt-3"></div>
                <button type="submit" class="btn btn-dark">Save</button>
                <a href="/Author/GetAll" class="btn btn-primary">List</a>
            </form>
        </div>
    </div>
</div>